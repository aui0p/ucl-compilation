<%= simple_form_for([:admin, @lesson], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <!--durration auto count-->
    <%= f.association :course%>
    <%= f.association :room%>
    <%= f.association :teacher%>
  </div>

  <div class="form-actions">
    <%= f.button :magic_submit_button %>
  </div>
<% end %>
