<p id="notice"><%= notice %></p>

<h1>Učitelé</h1>
<% if @teachers.empty? %>
  <h3>Nebyli přidáni žádní učitelé</h3>
<%else%>
  <table class="table">
    <thead>
      <tr>
        <th>Křestní jméno</th>
        <th>Příjmení</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
          <td><%= link_to 'Show', [:admin, teacher] %></td>
          <td><%= link_to 'Edit', edit_admin_teacher_path(teacher) %></td>
          <td><%= link_to 'Destroy', [:admin, teacher], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>

<%= link_to 'Nový učitel', new_admin_teacher_path %> |
<%= link_to 'Zpět na Dasboard', [:admin, :dashboard] %>
