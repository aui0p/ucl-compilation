<%= simple_form_for([:admin, @teacher], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :magic_submit_button %>
  </div>
<% end %>
