<%= simple_form_for([:admin, @course], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :code %>
    <%= f.input :study_type %>
    <%= f.input :language %>
    <%= f.association :students, as: :check_boxes  %>
    <%= f.association :teachers%>
  </div>

  <div class="form-actions">
    <%= f.button :magic_submit_button %>
  </div>
<% end %>
